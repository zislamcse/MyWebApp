@using Models.ViewModels;
@model VMProduct
@{
    ViewData["Title"] = "List of Product";
}

<div class="col-12">
    <div class="container">
        <div class="row p-1">
            <div class="col-6"><h4><i class="bi bi-list"></i> Product List</h4></div>
            <div class="col-6 text-end"><a asp-controller="Product" asp-action="CreateUpdate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Add New</a></div>
        </div>
        <table class="table table-hover table-bordered table-striped">
            <thead>
                <tr>
                    <th class="col-sm-3">Name</th>
                    <th class="col-sm-3">Decription</th>
                    <th class="col-sm-2">Price</th>
                    <th class="col-sm-2">Category</th>
                    <th class="col-sm-2">Image</th>
                    <th class="col-sm-0">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.CategoryId</td>
                        <td>@item.ImageUrl</td>
                        <td role="group">
                            <a class="btn btn-outline-success" asp-action="CreateUpdate" asp-controller="Product" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>